<HTML>
  <HEAD>
    <% provide(:title, "ダウンロード") %>
  </HEAD>
  <BODY>
    <%= render 'pic/header' %>
    <div id="container">
      <%= render 'pic/sidbar' %>
      <div id="content">
	<% if flash[:notice] %>
	<div class="alert alert-success">
	  <%= flash[:notice] %>
	</div>
	<% end %>
	<h1><%= "#{@pic.title.split("_")[0]}" %></h1>
        <%= "#{@pic.userid}さんの作品" %><br>
        <%= link_to image_tag("/contents/likeit.jpeg", size: "40x40"), action: 'likeit', id: @pic.id %><br>
	いいねx<%= @like %><br>
	<%= image_tag "/img/#{@pic.title}.png" %>
	<%= form_tag action: "convert" do %>
	<%= select_tag :size, options_for_select([["えびみりん(200x200)", "200x200"],["ハーベスト(120x120)","120x120"],["tesuto(300x300)","300x300"]]) %>
	<%= hidden_field_tag :id, @pic.id %>
	<%= hidden_field_tag :title, @pic.title %>
	<%= image_submit_tag("/contents/download.png", class: "button") %>
	<% end %>
	<%= link_to "JPEGダウンロード", action:'convert_jpg', id: @pic.id, title:@pic.title %>
      </div>
    </div>
    <%= render 'pic/footer' %>
  </BODY>
</HTML>
